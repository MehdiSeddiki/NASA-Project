<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.epita.nasaproject.fragment.HomeFragment">

    <TextView
        android:id="@+id/home_fragment_textView_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/NasaProject"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_fragment_imageView_nasa_logo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/logoDescription"
        android:src="@drawable/nasa_logo"
        app:layout_constraintEnd_toEndOf="@+id/home_fragment_textView_home_title"
        app:layout_constraintStart_toStartOf="@+id/home_fragment_textView_home_title"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_textView_home_title" />

    <TextView
        android:id="@+id/home_fragment_textView_development_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/devTeam"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/home_fragment_imageView_nasa_logo"
        app:layout_constraintStart_toStartOf="@+id/home_fragment_imageView_nasa_logo"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_imageView_nasa_logo" />

    <TextView
        android:id="@+id/home_fragment_textView_mehdi_seddiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/devMehdi"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/home_fragment_textView_development_team"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/home_fragment_textView_development_team"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_textView_development_team" />

    <TextView
        android:id="@+id/home_fragment_textView_valentin_thiron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/devValentin"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_fragment_textView_mehdi_seddiki"
        app:layout_constraintStart_toStartOf="@+id/home_fragment_textView_mehdi_seddiki"
        app:layout_constraintTop_toBottomOf="@+id/home_fragment_textView_mehdi_seddiki"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>